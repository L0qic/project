<h1>Assignments</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assignments.each do |assignment| %>
      <tr>
        <td><%= assignment.task.name %>: <%= assignment.resource.name %></td>
        <td><%= link_to 'Unassign', assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<hr>
<%= link_to 'New Assignment', new_assignment_path %>
